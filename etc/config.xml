<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <shipping>
            <shipment_email_settings>
                <account_id>adobe-commerce</account_id>
                <retailer_id>adobe-commerce</retailer_id>
                <include_link_into_order_history_pages>1</include_link_into_order_history_pages>
                <include_link_into_shipping_email>1</include_link_into_shipping_email>
                <include_link_into_order_confirmation_email>0</include_link_into_order_confirmation_email>
                <order_button_css>
                    <![CDATA[<p align="center" style="font-family: OpenSans, sans-serif;
font-weight: 800; padding-left:20px; padding-top:20px; font-size:
18px;"><a href="{{WISMOLINK}}" style="background-color: blue; padding:
0.75em 4em; margin: 0px auto; color: white; border-top-left-radius:
5px; border-top-right-radius: 5px; border-bottom-right-radius: 5px;
border-bottom-left-radius: 5px; border: none; font-family: OpenSans,
sans-serif; font-weight: 800;">Track My Order</a><br></p>]]>
                </order_button_css>
                <track_send_api_url>
                    <![CDATA[https://api.wismolabs.com/api/v1/magento/shipments]]>
                </track_send_api_url>
                <rps>2</rps>
                <use_mysql_queue>0</use_mysql_queue>
                <use_logs>0</use_logs>
            </shipment_email_settings>
        </shipping>
    </default>
</config>
